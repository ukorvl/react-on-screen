{
  "name": "react-on-screen",
  "version": "1.0.0",
  "description": "Lightweight library to detect React elements visibility",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.esm.js",
  "files": [
    "build"
  ],
  "types": "build/cjs/index.d.ts",
  "scripts": {
    "build:esm": "tsc -m esNext --outDir build/esm",
    "build:cjs": "tsc --outDir build/cjs",
    "build": "npm run build:esm && npm run build:cjs ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "onscreen",
    "intersection observer"
  ],
  "author": "ukorvl",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "typescript": "4.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "singleAttributePerLine": true
  }
}
