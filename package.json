{
  "name": "@ukorvl/react-on-screen",
  "version": "1.0.0-beta.1",
  "description": "Lightweight typescript library to detect React elements visibility",
  "license": "MIT",
  "author": "ukorvl",
  "repository": "https://github.com/ukorvl/react-on-screen",
  "homepage": "https://github.com/ukorvl/react-on-screen#readme",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.esm.js",
  "files": [
    "build"
  ],
  "types": "build/esm/index.d.ts",
  "scripts": {
    "build:esm": "tsc -m esNext --outDir build/esm && npm run build:types -- --outDir build/esm",
    "build:cjs": "tsc --outDir build/cjs && npm run build:types -- --outDir build/cjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --removeComments false",
    "build": "npm run build:esm && npm run build:cjs",
    "test": "jest",
    "lint": "eslint --ext=ts,tsx lib --max-warnings=0",
    "lint:editorconfig": "npx editorconfig-checker",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "typescript",
    "onscreen",
    "intersection observer"
  ],
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "4.7"
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsdoc/recommended",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
      "node_modules",
      "build"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-duplicate-imports": "warn",
      "jsdoc/newline-after-description": "off",
      "jsdoc/require-returns-type": "off",
      "jsdoc/require-param-type": "off",
      "jsdoc/require-jsdoc": [
        "warn",
        {
          "publicOnly": true,
          "contexts": [
            "TSInterfaceDeclaration",
            "TSTypeAliasDeclaration",
            "TSEnumDeclaration"
          ],
          "require": {
            "FunctionExpression": true,
            "ClassDeclaration": true,
            "MethodDefinition": true,
            "ArrowFunctionExpression": true,
            "ClassExpression": true
          }
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.test.tsx"
        ],
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  }
}
