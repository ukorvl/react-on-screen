{
  "name": "react-on-screen",
  "version": "1.0.0",
  "description": "Lightweight library to detect React elements visibility",
  "licence": "MIT",
  "author": "ukorvl",
  "repository": "https://github.com/ukorvl/react-on-screen",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.esm.js",
  "files": [
    "build"
  ],
  "types": "build/index.d.ts",
  "scripts": {
    "build:esm": "tsc -m esNext --outDir build/esm && npm run build:types -- --outDir build/esm",
    "build:cjs": "tsc --outDir build/cjs && npm run build:types -- --outDir build/cjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --removeComments false",
    "build": "npm run build:esm && npm run build:cjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext=ts,tsx lib",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "onscreen",
    "intersection observer"
  ],
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "typescript": "4.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "ignorePatterns": [
      "node_modules",
      "build"
    ],
    "rules": {
      "no-unused-vars": "off"
    }
  }
}
