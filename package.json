  },
  "keywords": [
    "react",
    "onscreen",
    "intersection observer"
  ],
  "author": "ukorvl",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "typescript": "4.7"
  }
}
